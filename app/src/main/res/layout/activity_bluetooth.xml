<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/connectedInfo"
        android:text="@string/connected_to"
        android:textSize="20sp"
        android:gravity="bottom"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:id="@+id/outputBox"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical"
        android:gravity="bottom"
        android:background="#eeeeee"
        android:layout_below="@id/connectedInfo"/>


    <EditText
        android:id="@+id/sendBox"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_below="@id/outputBox"
        android:layout_alignParentStart="true"
        android:hint="@string/message_to_send"
        android:layout_toStartOf="@+id/btnSend"
        android:inputType="text"
        android:importantForAutofill="no"/>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/outputBox"
        android:layout_alignParentEnd="true"
        android:text="@string/send" />

    <Button
        android:id="@+id/btnDisconnect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSend"
        android:text="@string/disconnect" />
</RelativeLayout>
